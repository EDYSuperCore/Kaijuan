{
  "name": "kaijuan-server",
  "version": "1.6.0",
  "description": "Kaijuan Backend Server",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:bundle": "npm run build && ncc build src/index.ts -o bundle --minify --source-map --external sqlite3",
    "start": "node bundle/index.js",
    "dev": "tsx src/index.ts"
  },
  "dependencies": {
    "fastify": "^4.24.3",
